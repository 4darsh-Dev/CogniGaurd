{
    "manifest_version": 2,
    "name": "CogniGuard",
    "version": "1.0",
    "description": "Detects dark patterns on websites.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "browser_action": {
      "default_icon": {
        "16": "assets/images/icon-black.png",
        "48": "assets/images/icon-black.png",
        "128": "assets/images/icon-black.png"
      },
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "icons": {
      "16": "assets/images/icon-black.png",
      "48": "assets/images/icon-black.png",
      "128": "assets/images/icon-black.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      "content.js"
    ]

    
  }
  